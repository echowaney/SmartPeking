<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hashwaney.zhbj33.acitivity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/tab_style"
            android:drawableTop="@drawable/tab_home_selector"
            android:text="首页"/>

        <RadioButton
            android:id="@+id/rb_newscenter"
            style="@style/tab_style"
            android:drawableTop="@drawable/tab_newscenter_selector"
            android:text="新闻中心"/>

        <RadioButton
            android:id="@+id/rb_smartservice"
            style="@style/tab_style"
            android:drawableTop="@drawable/tab_smartservice_selector"
            android:text="智慧服务"/>

        <RadioButton
            android:id="@+id/rb_govaffairs"
            style="@style/tab_style"
            android:drawableTop="@drawable/tab_govaffair_selector"
            android:text="政务"/>

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/tab_style"
            android:drawableTop="@drawable/tab_setting_selector"
            android:text="首页"/>
    </RadioGroup>
</LinearLayout>
